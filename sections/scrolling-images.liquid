{%- style -%}
  .section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.bg_color }};
    overflow: hidden;
  }
  .scrolling-image-heading-{{ section.id }} h2 {
    text-align: center;
    font-family: Oswald, sans-serif;
    font-size: 30px;
    margin-bottom: 30px;
    color: #000000;
  }
  .marquee-wrapper-{{ section.id }} {
    display: flex;
    overflow: hidden;
    user-select: none;
  }
  .track-horizontal-{{ section.id }} {
    display: flex;
    flex-shrink: 0;
    gap: 15px;
    align-items: center;
    animation: scroll-left-{{ section.id }} {{ section.settings.speed }}s linear infinite;
  }
  @keyframes scroll-left-{{ section.id }} {
    0% { transform: translateX(0); }
    100% { transform: translateX(-100%); }
  }
  .slide-{{ section.id }} {
    height: 400px;
    width: 250px;
    flex-shrink: 0;
  }
  .slide-{{ section.id }} img, .slide-{{ section.id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 10px;
    display: block;
  }
{%- endstyle -%}

<div class="section-{{ section.id }}">
  {% if section.settings.heading != blank %}
    <div class="scrolling-image-heading-{{ section.id }}">
      <h2>{{ section.settings.heading }}</h2>
    </div>
  {% endif %}

  <div class="marquee-wrapper-{{ section.id }}">
    <div class="track-horizontal-{{ section.id }}">
      {%- for block in section.blocks -%}
        <div class="slide-{{ section.id }}" {{ block.shopify_attributes }}>
          {%- if block.settings.image != blank -%}
            {{ block.settings.image | image_url: width: 500 | image_tag: loading: 'lazy' }}
          {%- else -%}
            {{ 'image' | placeholder_svg_tag }}
          {%- endif -%}
        </div>
      {%- endfor -%}
      
      {%- for block in section.blocks -%}
        <div class="slide-{{ section.id }}">
          {%- if block.settings.image != blank -%}
            {{ block.settings.image | image_url: width: 500 | image_tag: loading: 'lazy' }}
          {%- else -%}
            {{ 'image' | placeholder_svg_tag }}
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Scrolling Images",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Customers love our watch!"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "speed",
      "min": 5,
      "max": 100,
      "step": 5,
      "unit": "s",
      "label": "Animation Speed",
      "default": 30
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Scrolling Images",
      "blocks": [
        { "type": "image" },
        { "type": "image" },
        { "type": "image" },
        { "type": "image" }
      ]
    }
  ]
}
{% endschema %}